              {%- when 'usp' -%}
                <div class="timer-box">
                  <img src="{{ block.settings.icon | img_url : 'master' }}">
                  <div class="timer-title">{{ block.settings.title }}</div>
                  <p>{{ block.settings.sub_title }}</p>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
        <div class="pro-tab-with-collapse">
          <div class="top-tab">
            <a href="#" class="tab active" data-toggle-target=".tab-content-1">{{ section.settings.tb_1_titlee }}</a>
            <a href="#" class="tab" data-toggle-target=".tab-content-2">{{ section.settings.tb_2_titlee }}</a>
          </div>
          <div class="tab-content tab-content-1 active">
            <div class="acc-container">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'tab1' -%}
                    <div class="acc">
                      <div class="acc-head">
                        <p>{{ block.settings.tb1_title }}</p>
                      </div>
                      <div class="acc-content">
                        <p>
                          {{ block.settings.tb1_content }}
                        </p>
                      </div>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          </div>
          <div class="tab-content tab-content-2">
            <div class="acc-container">
              <img src="https://3akncjhe2byedc6p-10534408.shopifypreview.com/cdn/shop/files/Group_1_1.png">
              {% assign tab_index = 1 %}
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'tab2' -%}
                    <div class="acc">
                      <div class="acc-head">
                        <p>
                          <span>{{ tab_index }}. </span>{{ block.settings.tb2_title }}
                        </p>
                      </div>
                      <div class="acc-content">
                        <p>
                          {{ block.settings.tb2_content }}
                        </p>
                      </div>
                    </div>
                    {% assign tab_index = tab_index | plus: 1 %}
                {% endcase %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  // Initialize the product main slider
  var productSlider = new Swiper(".product-slider", {
    spaceBetween: 0,
    centeredSlides: false,
    loop: true,
    direction: "horizontal",
    loopedSlides: 5,
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    lazy: {
      loadPrevNext: true,
      loadOnTransitionStart: true,
      loadPrevNextAmount: 2,
    },
    resizeObserver: true,
    pagination: false,
    slidesPerView: "auto", 
    breakpoints: {
      580: {
        spaceBetween: 100,
        centeredSlides: true, 
        slidesPerView: 1, 
      },
      768: {
        slidesPerView: 1,
        spaceBetween: 10,
      },
    },
  });

  var productThumbs = new Swiper(".product-thumbs", {
    spaceBetween: 0,
    centeredSlides: false,
    loop: true,
    slideToClickedSlide: true,
    direction: "horizontal",
    slidesPerView: 5,
    loopedSlides: 5,
  });

  productSlider.controller.control = productThumbs;
  productThumbs.controller.control = productSlider;

  window.addEventListener("resize", function () {
    setTimeout(function () {
      productSlider.update();
      productThumbs.update();
    }, 100); 
  });

});

  
  $(document).ready(function () {
    $(".tab").on("click", function (evt) {
      evt.preventDefault();
      $(".tab").removeClass("active");
      $(this).addClass("active");
      var sel = this.getAttribute("data-toggle-target");
      console.log(sel);
      $(".tab-content").removeClass("active").filter(sel).addClass("active");
    });

    $(".acc-head").on("click", function () {
      if ($(this).hasClass("active")) {
        $(this).siblings(".acc-content").slideUp();
        $(this).removeClass("active");
      } else {
        $(".acc-content").slideUp();
        $(".acc-head").removeClass("active");
        $(this).siblings(".acc-content").slideToggle();
        $(this).toggleClass("active");
      }
    });
  });
</script>

