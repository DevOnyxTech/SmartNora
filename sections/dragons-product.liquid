{%- assign product = section.settings.product -%}
<div class="main-product-sec" id="dragons-product-old">
  <div class="dragons-scroll" id="dragons-scroll"></div>
  <div class="container">
    <div class="center-dragon-logo"  >
      <img src="https://cdn.shopify.com/s/files/1/1053/4408/files/Untitled_design_1_7_1.png?v=1727985042">
    </div>
    <div class="comman-title"  id="dragons-product">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="product-inner-box" >
      <div class="left-block">
        <div class="container">
          <div id="mob-red" class="mobile-hide">
            <div class="slider slider-content">
              <div class="image-box swiper-container product-slider">
                <div class="swiper-wrapper">
                  {%- for block in section.blocks -%}
                    {%- case block.type -%}
                      {%- when 'images' -%}
                        <div class="swiper-slide">
                          <img
                            id="mainImage"
                            src="{{ block.settings.image | img_url : 'master' }}"
                            alt="Main Image"
                            class="swiper-lazy"
                          >
                        </div>
                    {% endcase %}
                  {% endfor %}
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-pagination"></div>
              </div>
            </div>
          </div>
          <div class="thumbnails">
            <div class="swiper-container product-thumbs">
              <div class="swiper-wrapper">
                {%- for block in section.blocks -%}
                  {%- case block.type -%}
                    {%- when 'images' -%}
                      <div class="swiper-slide">
                        <img
                          class="dragons-thumbnails swiper-lazy"
                          src="{{ block.settings.image | img_url : 'master' }}"
                          alt="Thumbnail 1"
                        >
                      </div>
                  {% endcase %}
                {% endfor %}
              </div>
            </div>
          </div>
          <div class="desktop-hide">
            <div class="thumbnails slide-pro-new owl-carousel">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'images' -%}
                    <div class="item">
                      <img
                        class="dragons-thumbnails swiper-lazy"
                        src="{{ block.settings.image | img_url : 'master' }}"
                        alt="Thumbnail 1"
                      >
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
      <div class="right-block">
        <div class="only-for-mob">
          <div class="center-dragon-logo">
            <img src="https://cdn.shopify.com/s/files/1/1053/4408/files/Untitled_design_1_7_1.png?v=1727985042">
          </div>
        </div>
        <div class="title">{{ product.title | remove: '- Snoring Solution' | escape }}</div>
        <div class="dragon-price-wrapper">
          {{ section.settings.price }}
        </div>

        <div {{ block.shopify_attributes }}>
          {%- form 'product', product, data-productid: product.id -%}
            <input type="hidden" name="id" data-productid="{{ product.id }}" value="{{ product.selected_or_first_available_variant.id }}">
            {{ form | payment_terms }}
          {%- endform -%}
        </div>

        <p class="d-title">{{ section.settings.promo_text }}</p>
        {%- render 'dragons-buy-button',
          block: block,
          product: product,
          product_form_id: product_form_id,
          section_id: section.id
        -%}

