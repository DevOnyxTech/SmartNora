{{ 'section-amy-testimonial.css' | asset_url | stylesheet_tag }}

<div class="recommended-experts-sec component">
  <div class="container">
    <div class="custom-review-slider">
      <h4>{{ section.settings.heading }}</h4>
      <div class="swiper-container testi-review-slider">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <p>{{ block.settings.quote }}</p>
              <div class="flex review-author">
                <div class="left-img">
                  {% if block.settings.author_image %}
                    <img
                      src="{{ block.settings.author_image | img_url: 'master' }}"
                      alt="{{ block.settings.author_name }}"
                      loading="lazy"
                    >
                  {% endif %}
                </div>
                <div class="right-content">
                  <p>
                    <strong>{{ block.settings.author_name }}</strong>
                  </p>
                  <p>{{ block.settings.author_title }}</p>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</div>
<script>
  const testimonialSlider = new Swiper(".custom-review-slider .testi-review-slider", {
                slidesPerView: 2, // Show 2 slides at a time
                spaceBetween: 20, // Space between slides
                loop: true,
                pagination: {
                    el: ".custom-review-slider .swiper-pagination",
                    clickable: true,
                },
                navigation: {
                    nextEl: ".custom-review-slider .swiper-button-next",
                    prevEl: ".custom-review-slider .swiper-button-prev",
                },
                breakpoints: {
                    992: {
                        slidesPerView: 1, // Show 1 slide on smaller screens
                    },
                    320: {
                        slidesPerView: 1, // Show 1 slide on smaller screens
                    },
                },
            });
</script>
{% schema %}
{
  "name": "Amy Testimonial",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "RECOMMENDED BY EXPERTS"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Testimonial Quote"
        },
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "Author Image"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name"
        },
        {
          "type": "text",
          "id": "author_title",
          "label": "Author Title/Position"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Amy Testimonial",
      "category": "Testimonials"
    }
  ]
}
{% endschema %}
