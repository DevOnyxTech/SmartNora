{{ 'section-image-contnet.css' | asset_url | stylesheet_tag }}
<div class="couples-wrapper">
  <div class="couples-title-wrapper">
    <div class="rating-wrapper">
      <div class="star-wrapper">
        <img src="https://cdn.shopify.com/s/files/1/1053/4408/files/star.svg?v=1729765440" loading="lazy" alt="star">
        <img src="https://cdn.shopify.com/s/files/1/1053/4408/files/star.svg?v=1729765440" loading="lazy" alt="star">
        <img src="https://cdn.shopify.com/s/files/1/1053/4408/files/star.svg?v=1729765440" loading="lazy" alt="star">
        <img src="https://cdn.shopify.com/s/files/1/1053/4408/files/star.svg?v=1729765440" loading="lazy" alt="star">
        <img src="https://cdn.shopify.com/s/files/1/1053/4408/files/star.svg?v=1729765440" loading="lazy" alt="star">
      </div>
      <div class="rating">
        <p>{{ section.settings.review_text }}</p>
      </div>
    </div>
    <h2>{{ section.settings.heading }}</h2>
  </div>
</div>

<div class="half-content-image-wrapper">
  {% for block in section.blocks %}
    <div class="half-content-image-container flex">
      <div class="half-image-content-section padding-t-80 w-50">
        <div class="image-wrapper">
          <img
            src="{{ block.settings.left_image | img_url: 'master' }}"
            alt="{{ block.settings.left_image.alt }}"
            class="rounded-3xl"
            loading="lazy"
          >
        </div>
      </div>
      <div class="half-image-content-section w-50">
        <div class="half-content-wrapper">
          <h2 class="text-nora-blue">{{ block.settings.title }}</h2>
          <p>{{ block.settings.description }}</p>
          <div class="content-image-wrapper mt-80">
            <img
              src="{{ block.settings.right_image | img_url: 'master' }}"
              class="rounded-3xl"
              alt="{{ block.settings.right_image.alt }}"
              loading="lazy"
            >
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Image Content Section",
  "settings": [
    {
      "type": "text",
      "id": "review_text",
      "label": "Review Text",
      "default": "Over 1,400 5-star Reviews"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The obvious choice for 100,000+ couples."
    }
  ],
  "blocks": [
    {
      "type": "content_block",
      "name": "Content Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "left_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "right_image",
          "label": "Content Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Content Section",
      "category": "Content"
    }
  ]
}
{% endschema %}
