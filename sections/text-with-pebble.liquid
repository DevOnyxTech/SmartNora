{{ 'section-text-with-pebble.css' | asset_url | stylesheet_tag }}

<div class="get-nora-section component">
  <div class="get-nora-container">
    <h2>
      {{ section.settings.heading -}}
      <br>
      {{ section.settings.subheading }}
    </h2>
    <div class="shop-now-btn">
      <a href="{{ section.settings.button_link | default: '#' }}">
        <svg class="shop-svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z">
          </path>
        </svg>
        <svg class="hover-svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122">
          </path>
        </svg>
        <span>{{ section.settings.button_text }}</span>
      </a>
    </div>
    <div class="get-nora-image">
      {% if section.settings.pebble_image %}
        <img
          src="{{ section.settings.pebble_image | img_url: 'master' }}"
          loading="lazy"
          alt="{{ section.settings.image_alt }}"
        >
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Text with Pebble",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get Nora"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "The best anti-snore technology"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "pebble_image",
      "label": "Pebble Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Pebble"
    }
  ],
  "presets": [
    {
      "name": "Text with Pebble",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
