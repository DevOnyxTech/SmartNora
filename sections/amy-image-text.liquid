{{ 'section-amy-image-text.css' | asset_url | stylesheet_tag }}

<div class="snorer-sec component">
  <div class="iwt-container">
    <div class="grid-2">
      <div class="snorer-left-sec">
        <h2>{{ section.settings.heading }}</h2>
        {{ section.settings.text_content }}
      </div>
      <div class="snorer-right-sec">
        {%- if section.settings.image -%}
          <img
            src="{{ section.settings.image | img_url: 'master' }}"
            alt="{{ section.settings.image_alt }}"
            loading="lazy"
          >
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Amy Image with Text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Be a lover, not a snorer."
    },
    {
      "type": "richtext",
      "id": "text_content",
      "label": "Text Content",
      "default": "<p>Consistent sleep is the foundation of a healthy, intimate relationship. Smart Nora users report peaceful nights, better mood, and greater intimacy.</p><p>One study found that sleeping an extra hour per night correlated with a 14% increase in sexual activity and a libido boost the next day for women. If a single hour can make that much of a difference, imagine what chronic sleep deprivation can do to your sex life.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "SNORER"
    }
  ],
  "presets": [
    {
      "name": "Amy Image Text",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
