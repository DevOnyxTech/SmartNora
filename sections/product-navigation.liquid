{{ 'section-product-navigation.css' | asset_url | stylesheet_tag }}

<div class="single-page-content-wrapper component">
  <div class="grey-box-wrapper">
    <div class="grey-box-content">
      <ul>
        {% for block in section.blocks %}
          {% if block.settings.title != blank and block.settings.link != blank %}
            <li>
              <a href="{{ block.settings.link }}" class="scroll-link">{{ block.settings.title }}</a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Navigation Links",
  "settings": [
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Navigation Link",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Link Title",
          "default": "Link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Navigation"
    }
  ]
}
{% endschema %}
