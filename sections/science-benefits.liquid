{{ 'science-benefits.css' | asset_url | stylesheet_tag }}

<section class="benefits">
  <div class="benefits__container">
    <h2 class="benefits__title">{{ section.settings.heading }}</h2>

    <div class="benefits__list">
      {% for block in section.blocks %}
        <div class="benefits__item {% if forloop.index == 2 %} benefits__item--reverse {% endif %}">
          <div class="benefits__image">
            <img src="{{ block.settings.image | img_url : 'master' }}" alt="Metabolism and stress reduction">
          </div>
          <div class="benefits__content">
            <div class="benefits__content__text">
              <h3 class="benefits__heading">{{ block.settings.title }}</h3>
              <p class="benefits__text">
                {{ block.settings.content }}
              </p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Science Benefit",
  "settings": [
    {
      "type": "html",
      "label": "Heading",
      "id": "heading"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
          "type": "html",
          "label": "Title",
          "id": "title"
        },
        {
          "type": "html",
          "label": "Content",
          "id": "content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Science Benefit"
    }
  ]
}
{% endschema %}

