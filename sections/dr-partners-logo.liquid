{{ 'section-dr-partner.css' | asset_url | stylesheet_tag }}
<div class="dr-our-partner-wrapper banner-container component">
  <div class="dr-our-partner-flex flex justify-between">
    <div class="our-partner-image">
      <img
        src="{{ section.settings.partner_image | img_url: 'master' }}"
        alt="{{ section.settings.partner_image.alt | escape }}"
        loading="lazy"
      >
    </div>
    <div class="our-partner-logos">
      <h3>{{ section.settings.heading }}</h3>
      <div class="partner-logo-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'partner_logo' %}
            <div class="partner-logo">
              <img
                src="{{ block.settings.logo | img_url: 'master' }}"
                alt="{{ block.settings.alt | escape }}"
                loading="lazy"
              >
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="partner-btn banner-btn">
    <a class="banner-button" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
  </div>
</div>
{% schema %}
{
  "name": "Dr Partner Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "partner_image",
      "label": "Partner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Partners"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Join our network"
    }
  ],
  "blocks": [
    {
      "type": "partner_logo",
      "name": "Partner Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dr Partner Section",
      "blocks": [
        {
          "type": "partner_logo"
        },
        {
          "type": "partner_logo"
        },
        {
          "type": "partner_logo"
        }
      ]
    }
  ]
}
{% endschema %}
