{{ 'section-dr-why-nora.css' | asset_url | stylesheet_tag }}

<!-- -Smart nora section -->
<div class="smart-nora-wrapper component">
  <div class="banner-container">
    <div class="why-sn-wrapper flex justify-between">
      <div class="why-sn-text">
        <h2>{{ section.settings.heading }}</h2>
        <div class="why-sn-para">
          {{ section.settings.paragraph }}
        </div>
      </div>
      <div class="why-sn-image">
        <img
          src="{{ section.settings.image | img_url: 'master' }}"
          loading="lazy"
          alt="{{ section.settings.image_alt }}"
        >
        <div class="sn-feature-block">
          {% for block in section.blocks %}
            <div class="features">
              <div class="features-svg">
                {{ block.settings.icon }}
              </div>
              <div class="features-title">
                <span>{{ block.settings.title }}</span>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Dr Why Smart Nora",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Smart Nora?"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "<p>Smart Nora is the world's most comfortable snoring solution and has improved the lives of tens and thousands of couples around the world. Be part of the reason why couples are getting better sleep.</p><p>With Nora you can turn any pillow into an anti-snore pillow and sleep on your side, back or stomach. Go to bed as you normally would, Nora takes care of the rest.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Smart Nora Device"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "Icon SVG"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dr Why Smart Nora",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}
