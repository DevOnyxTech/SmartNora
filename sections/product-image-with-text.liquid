{{ 'section-product-image-text.css' | asset_url | stylesheet_tag }}

<div class="single-page-experience-wrapper component" id="{{ section.settings.id }}">
  <div class="product-detail-header">
    <h3>{{ section.settings.title }}</h3>
    <p>{{ section.settings.subtitle }}</p>
  </div>
  <div class="flex-box-wrapper">
    {% for block in section.blocks %}
      {% if block.type == 'experience_item' %}
        <div class="flex-box flex product-detail-box   {% if block.settings.image_position == 'right' %}cms-rt-image{% endif %}">
          <div class="flex-image-wrapper">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt | escape }}">
            {% endif %}
          </div>
          <div class="flex-box-content-wrapper">
            <div class="flex-box-content-inner-wrapper">
              <h2>{{ block.settings.heading }}</h2>
              <p>
                {{ block.settings.description }}
              </p>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "New Image with Text",
  "settings": [
       {
      "type": "text",
      "id": "id",
      "label": "Section ID",
      "info": "Dev Use Only"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Experience"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "What to Expect"
    }
  ],
  "blocks": [
    {
      "type": "experience_item",
      "name": "Block Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "image_position",
          "label": "Image Position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Your Smart Nora Experience"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Simply tap to turn the pebble on once you are in bed and ready to sleep. You can also activate the 30-minute delay setting to allow some time to fall asleep before Nora starts actively listening for snoring."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "New Image with Text",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
