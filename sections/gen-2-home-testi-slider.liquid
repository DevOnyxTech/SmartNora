{{ 'gen-2-home-testi-slider.css' | asset_url | stylesheet_tag }}

<div class="miracle-slider">
  <div class="miracle-slider__header">
    <h2 class="miracle-slider__title white-text">{{ section.settings.heading }}</h2>
  </div>
  <div class="miracle-slider-new swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <h4 class="miracle-slider__quote white-text">"{{ block.settings.title }}"</h4>
          <p class="miracle-slider__author white-text">â€”{{ block.settings.author }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    let swiper = new Swiper(".miracle-slider-new", {
      slidesPerView: 2.2,
      centeredSlides: true,
      loop: true,
      speed: 1000,
      autoplay: {
        delay: 1500,
        disableOnInteraction: false,
      },
      breakpoints: {
        576: {
          slidesPerView: 1,
        },
        768: {
          slidesPerView: 2.2,
        }
      }
    });

    // Restart autoplay on resize
    window.addEventListener('resize', function () {
      swiper.autoplay.stop();
      swiper.autoplay.start();
    });
  });
</script>

