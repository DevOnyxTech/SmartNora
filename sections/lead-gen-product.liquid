<script>
    var slider = new Swiper('.lead-gallery-slider', {
        centeredSlides: true,
        loop: true,
          loopedSlides: 10,
          direction: 'horizontal',
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        pagination: {
            el: '.swiper-pagination',
            clickable: false,
        },
    breakpoints: {
        320: {
          slidesPerView: 1.3,
          spaceBetween: 20,
          pagination: {
            el: '.swiper-pagination',
             // dynamicBullets: true,
            clickable: true,
             pagination: true,
          },

        },
        768: {
          slidesPerView: 1.3,
          spaceBetween: 20,
          navigation: true,
           pagination: {
            el: '.swiper-pagination',
             // dynamicBullets: true,
            clickable: true,
             pagination: true,
          },
        },
        1024: {
          slidesPerView: 1,
          spaceBetween: 0,
          navigation: true,
            pagination: false,
        },
        1199: {
          slidesPerView: 1,
            pagination: false,
        }
      },
    });

  if (window.innerWidth >= 768) {
      thumbs = new Swiper('.lead-gallery-thumbs', {
          slidesPerView: 'auto',
          spaceBetween: 10,
          centeredSlides: false,
          loop: true,
          slideToClickedSlide: true,
          pagination: {
              el: '.swiper-pagination',
              clickable: true,
          },
      });

      slider.controller.control = thumbs;
      thumbs.controller.control = slider;
  } else {
      document.querySelector('.lead-gallery-thumbs').style.display = 'none';
  }

  //  slider.controller.control = thumbs;
    //thumbs.controller.control = slider;
</script>

