              <input type="hidden" name="id" data-productid="{{ product.id }}" value="{{ product.selected_or_first_available_variant.id }}">
              {{ form | payment_terms }}
              {% comment %}
                <div class="paywhirl-wrap">
                  
                </div>
              {% endcomment %}
            {%- endform -%}
          </div>

          <p class="d-title">{{ section.settings.promo_text }}</p>
